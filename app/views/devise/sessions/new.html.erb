<div class="content-main">
  <div class="border-form-div full-page-form">
    <h2 class="form-signin-heading">Please log in</h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, placeholder: "Email address", class: "form-control" %>
      <%= f.label :password_field, class: "sr-only" %>
      <div><%= f.password_field :password, placeholder: "Password", class: "form-control" %></div>
      <% if devise_mapping.rememberable? -%>
        <%= f.label :remember_me, class: "spaced-label" %>
        <%= f.check_box :remember_me %>
      <% end -%>
      <div><%= f.submit "Sign in", class: "btn btn-primary btn-lg btn-block" %></div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

