source 'https://rubygems.org'

gem 'rails', '4.0.0.rc1'
gem 'pg'
gem 'sass-rails', '~> 4.0.0.rc1'
gem 'less-rails'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'therubyracer', platforms: :ruby
